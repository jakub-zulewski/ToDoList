@using ToDoList.Application.Commands.CreateToDoItem

@model CreateToDoItemCommand

<h1>Add to do item</h1>
<hr />
<div class="row">
    <div class="col-md-4 mx-auto">
        <form action="/ToDo/Create" method="post">
            <div class="mb-3">
                <label class="form-label" asp-for="Title">Title</label>
                <input class="form-control" type="text" asp-for="Title" required />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Description">Description</label>
                <input class="form-control" type="text" asp-for="Description" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="DueDate">Date</label>
                <input class="form-control" type="date" asp-for="DueDate" />
                <span asp-validation-for="DueDate" class="text-danger"></span>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary btn-lg">Create</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
